<div class="min-h-screen bg-surface">
  <div class="container mx-auto px-4 py-8">
    <!-- Header -->
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-3xl font-bold text-foreground">我的文档</h1>
      <%= link_to new_document_path, class: "btn-primary" do %>
        <%= lucide_icon "plus", class: "w-5 h-5 mr-2" %>
        新建文档
      <% end %>
    </div>

    <!-- Documents List -->
    <% if @documents.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @documents.each do |document| %>
          <div class="card group hover:shadow-xl transition-shadow duration-300">
            <div class="card-body">
              <h3 class="text-xl font-semibold text-foreground mb-2 line-clamp-2">
                <%= document.title.presence || "无标题文档" %>
              </h3>
              
              <p class="text-muted-foreground text-sm mb-4 line-clamp-3">
                <%= document.content.presence&.truncate(100) || "暂无内容" %>
              </p>

              <div class="flex items-center justify-between text-xs text-muted-foreground mb-4">
                <span><%= time_ago_in_words(document.updated_at) %>前更新</span>
                <% if document.theme %>
                  <span class="badge badge-sm badge-secondary">
                    <%= document.theme.name %>
                  </span>
                <% end %>
              </div>

              <div class="flex gap-2">
                <%= link_to edit_document_path(document), class: "btn-secondary flex-1" do %>
                  <%= lucide_icon "edit", class: "w-4 h-4 mr-1" %>
                  编辑
                <% end %>
                <%= link_to document_path(document), class: "btn-outline flex-1" do %>
                  <%= lucide_icon "eye", class: "w-4 h-4 mr-1" %>
                  预览
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Pagination -->
      <div class="mt-8 flex justify-center">
        <%== pagy_nav(@pagy) if defined?(@pagy) %>
      </div>
    <% else %>
      <!-- Empty State -->
      <div class="text-center py-16">
        <div class="inline-flex items-center justify-center w-24 h-24 rounded-full bg-primary/10 mb-6">
          <%= lucide_icon "file-text", class: "w-12 h-12 text-primary" %>
        </div>
        <h3 class="text-xl font-semibold text-foreground mb-2">还没有文档</h3>
        <p class="text-muted-foreground mb-6">开始创建您的第一篇 Markdown 文档吧</p>
        <%= link_to new_document_path, class: "btn-primary" do %>
          <%= lucide_icon "plus", class: "w-5 h-5 mr-2" %>
          新建文档
        <% end %>
      </div>
    <% end %>
  </div>
</div>
