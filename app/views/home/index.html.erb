<!-- WeMD Markdown Editor Landing Page -->
<div class="min-h-screen bg-gradient-to-br from-background via-surface to-muted">
  <!-- Hero Section -->
  <section class="relative overflow-hidden">
    <!-- Decorative Background -->
    <div class="absolute inset-0 bg-grid-pattern opacity-[0.02] pointer-events-none"></div>
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-20 pb-32">
      <div class="text-center">
        <!-- Logo & Title -->
        <div class="inline-flex items-center justify-center mb-8 animate-float">
          <%= image_tag 'icon-512.png', alt: '红中排版', class: 'w-20 h-20' %>
        </div>
        
        <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold text-foreground mb-6 leading-tight">
          红中排版 篇篇爆红
        </h1>
        
        <p class="text-xl md:text-2xl text-muted-foreground mb-12 max-w-3xl mx-auto">
          公众号排版运营神器
        </p>
        
        <!-- CTA Buttons -->
        <div class="flex justify-center items-center relative z-10">
          <%= link_to start_writing_path, class: "btn-primary text-lg px-8 py-4" do %>
            开始创作
          <% end %>
        </div>
        
        <p class="text-sm text-muted-foreground mt-6">
          <%= lucide_icon "monitor-smartphone", class: "w-4 h-4 inline mr-1" %>
          随时随地，任意设备皆可访问
        </p>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20 bg-surface/50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-foreground mb-4">
          为什么选择红中排版？
        </h2>
        <p class="text-lg text-muted-foreground">
          我们为微信公众号写作者提供最好的 Markdown 编辑体验
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Feature 1 -->
        <div class="card p-8 hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
          <div class="inline-flex items-center justify-center w-12 h-12 rounded-lg bg-primary/10 mb-6">
            <%= lucide_icon "eye", class: "w-6 h-6 text-primary" %>
          </div>
          <h3 class="text-xl font-semibold text-foreground mb-3">实时预览</h3>
          <p class="text-muted-foreground">
            边写边看效果，左侧编辑右侧预览，所见即所得的编辑体验
          </p>
        </div>
        
        <!-- Feature 2 -->
        <div class="card p-8 hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
          <div class="inline-flex items-center justify-center w-12 h-12 rounded-lg bg-primary/10 mb-6">
            <%= lucide_icon "copy", class: "w-6 h-6 text-primary" %>
          </div>
          <h3 class="text-xl font-semibold text-foreground mb-3">一键复制</h3>
          <p class="text-muted-foreground">
            专为微信公众号优化，点击复制按钮即可完美粘贴到微信编辑器
          </p>
        </div>
        
        <!-- Feature 3 -->
        <div class="card p-8 hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
          <div class="inline-flex items-center justify-center w-12 h-12 rounded-lg bg-primary/10 mb-6">
            <%= lucide_icon "palette", class: "w-6 h-6 text-primary" %>
          </div>
          <h3 class="text-xl font-semibold text-foreground mb-3">丰富主题</h3>
          <p class="text-muted-foreground">
            内置多种精美主题，从学术风格到赛博朋克，总有一款适合你
          </p>
        </div>
        
        <!-- Feature 4 -->
        <div class="card p-8 hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
          <div class="inline-flex items-center justify-center w-12 h-12 rounded-lg bg-primary/10 mb-6">
            <%= lucide_icon "git-branch", class: "w-6 h-6 text-primary" %>
          </div>
          <h3 class="text-xl font-semibold text-foreground mb-3">Mermaid 图表</h3>
          <p class="text-muted-foreground">
            支持流程图、时序图、甘特图等多种图表，让技术文章更专业
          </p>
        </div>
        
        <!-- Feature 5 -->
        <div class="card p-8 hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
          <div class="inline-flex items-center justify-center w-12 h-12 rounded-lg bg-primary/10 mb-6">
            <%= lucide_icon "function-square", class: "w-6 h-6 text-primary" %>
          </div>
          <h3 class="text-xl font-semibold text-foreground mb-3">数学公式</h3>
          <p class="text-muted-foreground">
            支持 LaTeX 数学公式，让学术论文和技术文档排版更美观
          </p>
        </div>
        
        <!-- Feature 6 -->
        <div class="card p-8 hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
          <div class="inline-flex items-center justify-center w-12 h-12 rounded-lg bg-primary/10 mb-6">
            <%= lucide_icon "folder", class: "w-6 h-6 text-primary" %>
          </div>
          <h3 class="text-xl font-semibold text-foreground mb-3">文章目录</h3>
          <p class="text-muted-foreground">
            自动保存编辑历史，随时查看和恢复之前的版本，再也不怕误删
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="card-gradient p-12 rounded-2xl">
        <h2 class="text-3xl md:text-4xl font-bold text-foreground mb-4">
          准备好开始创作了吗？
        </h2>
        <p class="text-lg text-muted-foreground mb-8">
          加入我们，体验更好的 Markdown 编辑方式
        </p>
        
        <div class="flex justify-center">
          <%= link_to start_writing_path, class: "btn-primary text-lg px-8 py-4" do %>
            <%= lucide_icon "rocket", class: "w-5 h-5 mr-2" %>
            立即开始
          <% end %>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="py-12 border-t border-border">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center text-muted-foreground">
        <p class="mb-2">
          <%= lucide_icon "heart", class: "w-4 h-4 inline text-destructive" %>
          使用 Rails 7.2 + Tailwind CSS 构建
        </p>
        <p class="text-sm">
          © <%= Time.current.year %> 红中排版 Markdown Editor. All rights reserved.
        </p>
      </div>
    </div>
  </footer>
</div>

<style>
/* Grid Pattern Background */
.bg-grid-pattern {
  background-image: 
    linear-gradient(to right, currentColor 1px, transparent 1px),
    linear-gradient(to bottom, currentColor 1px, transparent 1px);
  background-size: 40px 40px;
}

/* Float Animation */
@keyframes float {
  0%, 100% {
    transform: translateY(0px);
  }
  50% {
    transform: translateY(-10px);
  }
}

.animate-float {
  animation: float 3s ease-in-out infinite;
}

/* Gradient Card */
.card-gradient {
  background: linear-gradient(135deg, 
    hsl(var(--color-surface)) 0%, 
    hsl(var(--color-muted)) 100%);
  border: 1px solid hsl(var(--color-border));
}
</style>
